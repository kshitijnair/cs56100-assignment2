doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
    body 
        main
            h2(id='h2') #{title}
            span(id='identifier') #{_id}
            p(id='description') #{description}
            button(id='editBtn') Edit 
            button(id='deleteBtn') Delete
        div(id='backdrop') 
        div(id='editPopup') 
            form(action="/updateItem", method="POST") 
                p
                    input(id='titleInput', name='title', value='#{title}', type='text', placeholder='Title' required)
                p
                    textarea(id='textInput', name='description', value='#{description}', type='text', placeholder='Description', cols="34", rows="8" required)
                input(id='documentId', type="hidden", name='id', value='')
                input(id='submit', value='Confirm', type='submit')
    style 
        include ./item.css
    script 
        include ./item.js
